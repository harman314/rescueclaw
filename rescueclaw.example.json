{
  "backup": {
    "interval": "6h",
    "maxSnapshots": 10,
    "path": "/var/rescueclaw/backups",
    "includeSessions": false
  },
  "health": {
    "checkInterval": "5m",
    "unhealthyThreshold": 3,
    "autoRestore": true,
    "autoRestoreCooldown": "1h"
  },
  "telegram": {
    "token": "YOUR_BOT_TOKEN",
    "allowedUsers": [123456789]
  },
  "openclaw": {
    "workspace": "/home/opc/clawd",
    "configPath": "/home/opc/.openclaw"
  }
}
